#include <NewPing.h>

#define TRIGGER_PIN_LEFT  12  // Arduino pin tied to trigger pin on the ultrasonic sensor.
#define ECHO_PIN_LEFT     11  // Arduino pin tied to echo pin on the ultrasonic sensor.

#define TRIGGER_PIN_RIGHT  10  // Arduino pin tied to trigger pin on the ultrasonic sensor.
#define ECHO_PIN_RIGHT     9  // Arduino pin tied to echo pin on the ultrasonic sensor.

int WR = 8;
int WL = 7;

#define MAX_DISTANCE 200 // Maximum distance we want to ping for (in centimeters). Maximum sensor distance is rated at 400-500cm.

NewPing sonar_left(TRIGGER_PIN_LEFT, ECHO_PIN_LEFT, MAX_DISTANCE); // NewPing setup of pins and maximum distance.
NewPing sonar_right(TRIGGER_PIN_RIGHT, ECHO_PIN_RIGHT, MAX_DISTANCE);

int DWR = 0;
int DWL = 0;

void setup() {
  Serial.begin(9600); // Open serial monitor at 115200 baud to see ping results.
  digitalWrite(WR, HIGH);
  digitalWrite(WL, HIGH);
  delay(2000);
}

void loop() {

  if (DWR < 10 && DWR != 0){ digitalWrite(WR, LOW); delay (1000); }
  else { digitalWrite(WR, HIGH); }

  if (DWL < 10 && DWL != 0){ digitalWrite(WL, LOW); delay (1000); }
  else { digitalWrite(WL, HIGH); }

  delay(40);                      // Wait 50ms between pings (about 20 pings/sec). 29ms should be the shortest delay between pings.
  unsigned int DWL = sonar_left.ping(); // Send ping, get ping time in microseconds (uS).
  Serial.print("Ping L: ");
  Serial.print(DWL / US_ROUNDTRIP_CM); // Convert ping time to distance in cm and print result (0 = outside set distance range)
  Serial.println("cm");
  
  unsigned int DWR = sonar_right.ping(); // Send ping, get ping time in microseconds (uS).
  Serial.print("Ping R: ");
  Serial.print(DWR / US_ROUNDTRIP_CM); // Convert ping time to distance in cm and print result (0 = outside set distance range)
  Serial.println("cm");

}
